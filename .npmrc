# pnpm configuration for deterministic installs and React compatibility

# Use symlinks for node_modules (default, but explicit)
symlink=true

# Hoist pattern - allows React and react-scripts to find dependencies
# Required for Create React App to work properly
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@babel/*
public-hoist-pattern[]=babel-*

# Auto-install peer dependencies (recommended for smoother experience)
auto-install-peers=true

# Strict peer dependencies - set to false for CRA compatibility
# CRA has some peer dep warnings that are safe to ignore
strict-peer-dependencies=false

# Use a shared store for all projects (saves disk space)
# Leave commented to use default location (~/.pnpm-store)
# store-dir=/path/to/custom/store

# Lockfile settings for deterministic installs
lockfile=true
prefer-frozen-lockfile=false

# Network settings
# registry=https://registry.npmjs.org/
network-timeout=60000

# Resolution mode - prefer to resolve from workspace (for future monorepo support)
resolution-mode=highest
